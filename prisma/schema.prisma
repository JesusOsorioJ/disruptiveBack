// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Topic {
  id         Int        @id @default(autoincrement())
  type       String
  categories Category[]
  contents   Content[]
}

model User {
  id       Int       @id @default(autoincrement())
  type     typeUser
  contents Content[]
}

model Content {
  id        Int      @id @default(autoincrement())
  contenido String
  category  Category
  Topic     Topic?   @relation(fields: [topicId], references: [id])
  topicId   Int?
  User      User?    @relation(fields: [userId], references: [id])
  userId    Int?
}

enum typeUser {
  Admin
  Lector
  Creador
}

enum Category {
  VIDEO
  IMAGE
  TEXT
}
